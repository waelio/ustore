{
  "compileOnSave": true,
  "compilerOptions": {
    "pretty": true,
    "newLine": "LF",
    "baseUrl": "./",
    "module": "esnext",
    "declaration": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noEmit": false,
    "target": "esnext",
    "importHelpers": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "strict": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node","jest"
    ],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./r_n_d",
    "./spec",
    "./example",
    "node_modules",
    "./dist/**/*"
  ]
}