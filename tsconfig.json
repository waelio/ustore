{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": false,
    "declaration": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "declarationMap": true,
    "rootDir": ".",
    "outDir": "lib",
    "moduleResolution": "Node",
    "target": "ES2020",
    "module": "ESNext",

    "esModuleInterop": true, /* Enables intero between CommonJS and ES */
    "lib": [
      "dom",
      "es6"
    ],
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "declarationDir": "./types",
    "charset": "utf8",
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "transformIgnorePatterns": "true",
  "include": [
    "index",
    "src/**/*",
    "/types/**/*",
    "/config/**/*"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}