{
  "compilerOptions": {
    "alwaysStrict": true,
    "noEmitOnError": true,
    "module": "CommonJS",
    "charset": "utf8",
    "allowJs": true,
    "declaration": true,
    "outDir": "root/lib",
    "declarationDir": "root/types",
    "declarationMap": true,
    "esModuleInterop": true, /* Enables intero between CommonJS and ES */
    "forceConsistentCasingInFileNames": true, /* Disallow inconsistently */
    "incremental": true, /* Enable incremental compilation */
    "lib": [
      "ESNext",
      "ES7",
      "ES6",
      "ES5",
      "dom"
    ],
    "noImplicitAny": false,
    "noImplicitThis": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2015",
    "skipLibCheck": true /* Skip type checking of declaration files. */
  },
  "include": [
    "./root/src/index.ts"
  ],
  "exclude": [
    "tsconfig.json",
    "lib",
    "node_modules",
    "radata",
    "example"
  ]
}