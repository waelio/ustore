{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "experimentalDecorators": true,
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "declarationMap": true,
    "rootDir": ".",
    "outDir": "lib",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es6"
    ],
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "declarationDir": "./types",
    "charset": "utf8",
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "transformIgnorePatterns": "true",
  "include": [
    "./index.ts",
    "./config",
    "src/**/*"
  ],
  "exclude": [
    "ignore",
    "lib",
    "node_modules",
    "localbase"
  ]
}